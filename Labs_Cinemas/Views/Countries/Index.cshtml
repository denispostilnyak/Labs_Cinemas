@model IEnumerable<Labs_Cinemas.Countries>

@{
    ViewData["Title"] = "Countries";
}

    <h1>Countries</h1>

<p>
    <a asp-action="Create">Create New Country</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfIndependency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountOfFilms)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfIndependency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountOfFilms)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
