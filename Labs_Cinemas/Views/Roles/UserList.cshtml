@model IEnumerable<Labs_Cinemas.Models.User>

    <h2>List roles</h2>
    <a asp-action="Create">Create</a>
<table class="table">
    @foreach (var user in Model) {
    <tr>
        <td>@user.Email</td>
        <td>
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Access rights</a>
        </td>
        <td>
            <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change password</a>
                <a class="btn btn-sm btn-primary" asp-action="Edit1" asp-route-id="@user.Id">Change</a>
                <button type="submit" class="btn btn-sm btn-danger">
                    Delete
                </button>
            </form>
        </td>
    </tr>
    }
</table>
